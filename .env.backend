# CIAD Backend Development Environment Configuration
# Copy this file to .env and adjust values as needed

# Core Application Configuration
DATABASE_URI=postgresql://postgres:postgres@localhost:5432/ciad
PORT=1234
ENVIROMENT=development
ORIGIN=http://localhost:4321

# MinIO Configuration
MINIO_ENDPOINT=ciad-minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=manifests

# JWT Authentication Configuration
# IMPORTANT: Change JWT_SECRET to a strong, random value in production
# Generate with: openssl rand -base64 32
JWT_SECRET=tKAn4AMbELQsqZMKc/w2bXjpKizOSEQ2cREBzlnYkQo=
JWT_EXPIRY=24h
JWT_ISSUER=ciad-system

# Password Configuration
# bcrypt cost factor (4-31, higher = more secure but slower)
BCRYPT_COST=12

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_SAME_SITE=lax  # Changed from 'strict' to 'lax' for cross-port development

# Security Configuration
ENABLE_CSRF=true
ENABLE_SECURITY_HEADERS=true
LOG_SECURITY_EVENTS=true
SECURITY_LOG_FILE=logs/security.log
MAX_REQUEST_SIZE=1048576  # 1MB in bytes
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=

# Rate Limiting Configuration
ENABLE_RATE_LIMIT=true
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=15m
GENERAL_RATE_LIMIT=100
